<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_topic_vocabulary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtSearchScore"
        android:layout_width="365dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/custom_search"
        android:hint="   search topic" />

    <ImageButton
        android:id="@+id/btnVoiceScore"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/edtSearchScore"
        android:background="@drawable/ic_speaking" />

    <ListView
        android:id="@+id/lvScoreStatistic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edtSearchScore"
        android:background="@drawable/custom_background"
        android:dividerHeight="4dp">

    </ListView>

</RelativeLayout>




